%h1 
  Edit task for user
  = @owner_user.email 
.row
  .col-md-6.col-md-offset-3
    = simple_form_for(@task, url: user_task_path(@owner_user, @task), method: 'patch') do |f|
      = f.input  :name
      = f.input  :description, as: :text
      = f.button :submit, 'Save changes', class: "btn btn-primary"